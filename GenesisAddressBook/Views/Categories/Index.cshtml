@model IEnumerable<GenesisAddressBook.Models.Category>

@{
    ViewData["Title"] = "Group Categories";
}

<h1>Group Categories</h1>

<div class="row row-md-2 mb-5">
    <div class="">
        <a class="glass-button" asp-action="Create">Create New</a>
    </div>
</div>
<section class="row glass-cf-style darkGlass p-4">
    <div>
        <table class="col-md-4 text-light">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <a class="me-3" asp-action="Edit" asp-route-id="@item.Id" title="Edit Category"><i class="bi bi-pencil text-white"></i></a> |
                            <a class="me-3" asp-action="EmailCategory" asp-route-id="@item.Id" title="Send Group Email"><i class="bi bi-envelope text-white"></i></a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" title="Delete Category"><i class="bi bi-trash text-danger"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
